<slideshow width="1000" height="562" background-color="#f5f9ff">
    <styles>
        <style name="title" pos-x="50" pos-y="50" pos-orig-x="50" pos-orig-y="50" font-size="70" color="#172b4d"/>
        <style name="text" pos-x="50" pos-y="50" pos-orig-x="50" pos-orig-y="50" font-size="50" color="#4990f9"/>
    </styles>
    <transitions>
        <transition name="none" type="none" />
        <transition name="fade" type="fade" duration="150" />
        <transition name="scale" type="scale" duration="150" orig-x="50" orig-y="50" />
    </transitions>
    <slides>
        <slide name="intro" transition="fade">
            <text style="title" pos-y="30">GO to make games</text>
            <animation src="embd://gophers.png" tw="96" th="96" scale="2" pos-y="52.5">
                <frame tx="0" ty="0" duration="2000" />
                <frame tx="0" ty="1" duration="200" />
            </animation>
            <text style="text" pos-y="70">Why note?</text>
        </slide>
        <slide name="slide2" transition="scale">
            <text style="title" pos-y="30">Scale transition</text>
            <animation src="embd://gophers.png" tw="96" th="96" scale="2" pos-y="52.5">
                <frame tx="0" ty="0" duration="2000" />
                <frame tx="0" ty="1" duration="200" />
            </animation>
            <text style="text" pos-y="70">OMG</text>
        </slide>
    </slides>
</slideshow>