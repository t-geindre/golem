<slideshow width="960" height="540" background-color="#f5f9ff">
    <styles>
        <style name="title" pos-y="30" font-size="80" color="#172b4d"/>
        <style name="text" pos-y="70" font-size="50" color="#4990f9"/>
    </styles>
    <transitions>
        <transition name="horizontal" ease="sin" type="horizontal" duration="150" default="true"/>
        <transition name="fade" ease="quad" type="fade" duration="150"/>
        <transition name="scale" ease="cubic" type="scale" duration="150"/>
        <transition name="vertical" ease="bounce" type="vertical" duration="150"/>
        <transition name="scale-horiz" ease="linear" type="scale, horizontal" duration="150"/>
    </transitions>
    <slides>
        <slide>
            <text style="title" font-size="60">Horizontal transition, default</text>
            <animation src="embd://gophers.png" tw="96" th="96" pos-y="52.5">
                <frame tx="0" ty="0" duration="2000" />
                <frame tx="0" ty="1" duration="200" />
            </animation>
            <text style="text">Sin easing</text>
        </slide>
        <slide transition="fade">
            <text style="title">Fade transition</text>
            <animation src="embd://gophers.png" tw="96" th="96" pos-y="52.5">
                <frame tx="0" ty="0" duration="2000" />
                <frame tx="0" ty="1" duration="200" />
            </animation>
            <text style="text">Quadratic easing</text>
        </slide>
        <slide transition="scale">
            <text style="title">Scale transition</text>
            <animation src="embd://gophers.png" tw="96" th="96" pos-y="52.5">
                <frame tx="0" ty="0" duration="2000" />
                <frame tx="0" ty="1" duration="200" />
            </animation>
            <text style="text">Cubic easing</text>
        </slide>
        <slide transition="vertical">
            <text style="title">Vertical transition</text>
            <animation src="embd://gophers.png" tw="96" th="96" pos-y="52.5">
                <frame tx="0" ty="0" duration="2000" />
                <frame tx="0" ty="1" duration="200" />
            </animation>
            <text style="text">Bounce easing</text>
        </slide>
        <slide transition="scale-horiz">
            <text style="title" font-size="60">Scale/horizontal combination</text>
            <animation src="embd://gophers.png" tw="96" th="96" pos-y="52.5">
                <frame tx="0" ty="0" duration="2000" />
                <frame tx="0" ty="1" duration="200" />
            </animation>
            <text style="text">Linear easing</text>
        </slide>

    </slides>
</slideshow>